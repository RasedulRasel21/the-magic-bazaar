<style>
  .magic-footer {
    background: #282627;
    color: #fff;
    padding: 80px 20px 40px;
  }
  .footer-section{
    margin: 0 auto;
  }
  .footer-main {
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer-logo {
    text-align: center;
    margin-bottom: 60px;
  }

  .footer-logo img {
    max-width: 180px;
    height: auto;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 60px;
    margin-bottom: 60px;
  }

  .footer-section-title {
    font-size: 20px;
    color: #d4af37;
    margin-bottom: 20px;
    font-weight: 600;
  }

  .footer-text {
    font-size: 14px;
    line-height: 1.8;
    color: #ccc;
    text-align: justify;
  }

  .newsletter-form {
    position: relative;
    display: flex;
    margin-top: 20px;
  }

  .newsletter-input {
    flex: 1;
    background: transparent;
    border: 2px solid #5a5a5a;
    color: #fff;
    padding: 14px 20px;
    border-radius: 50px;
    font-size: 14px;
    outline: none;
    transition: border-color 0.3s ease;
  }

  .newsletter-input::placeholder {
    color: #999;
  }

  .newsletter-input:focus {
    border-color: #d4af37;
  }

  .newsletter-button {
    position: absolute;
    right: 4px;
    top: 50%;
    transform: translateY(-50%);
    background: linear-gradient(135deg, #d4af37 0%, #c9a961 100%);
    color: #1a1a1a;
    border: none;
    padding: 10px 30px;
    border-radius: 50px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .newsletter-button:hover {
    transform: translateY(-50%) scale(1.05);
    box-shadow: 0 4px 15px rgba(212, 175, 55, 0.4);
  }

  .contact-info {
    font-size: 14px;
    color: #ccc;
  }

  .contact-info a {
    color: #d4af37;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .contact-info a:hover {
    color: #fff;
  }

  .social-links {
    display: flex;
    flex-direction: column;
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: 15px;
    color: #ccc;
    text-decoration: none;
    font-size: 14px;
    transition: all 0.3s ease;
    padding: 8px 0;
  }

  .social-link:hover {
    color: #d4af37;
    transform: translateX(5px);
  }

  .social-icon {
    width: 36px;
    height: 36px;
    border: 2px solid #5a5a5a;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .social-link:hover .social-icon {
    border-color: #d4af37;
    background: rgba(212, 175, 55, 0.1);
  }

  .footer-divider {
    height: 1px;
    background: linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.5) 50%, transparent 100%);
    margin: 40px 0 30px;
    max-width: 100%;
    display: block !important;
  }

  .footer-bottom {
    text-align: center;
    font-size: 13px;
    color: #999;
    line-height: 1.8;
  }

  .footer-bottom a {
    color: #999;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-bottom a:hover {
    color: #d4af37;
  }

  .policy-links {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 10px 20px;
    margin-bottom: 15px;
  }

  .policy-links a {
    color: #999;
    text-decoration: none;
    font-size: 13px;
    transition: color 0.3s ease;
  }

  .policy-links a:hover {
    color: #d4af37;
  }

  .policy-links span {
    color: #666;
  }

  .newsletter-success {
    display: none;
    color: #4caf50;
    font-size: 13px;
    margin-top: 10px;
  }

  .newsletter-error {
    display: none;
    color: #f44336;
    font-size: 13px;
    margin-top: 10px;
  }

  @media (max-width: 968px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .footer-logo {
      margin-bottom: 40px;
    }
  }
</style>

<footer class="magic-footer">
  <div class="footer-main">
    {% if section.settings.logo %}
      <div class="footer-logo">
        <img src="{{ section.settings.logo | img_url: '300x' }}" alt="{{ shop.name }}">
      </div>
    {% endif %}

    <div class="footer-content">
      <!-- Newsletter Section -->
      <div class="footer-section">
        <h3 class="footer-section-title">{{ section.settings.newsletter_title }}</h3>
        <p class="footer-text">{{ section.settings.newsletter_description }}</p>
        
        {% form 'customer', class: 'newsletter-form-wrapper' %}
          {% if form.posted_successfully? %}
            <div class="newsletter-success" style="display: block;">
              {{ section.settings.success_message }}
            </div>
          {% endif %}
          
          <div class="newsletter-form">
            <input 
              type="email" 
              name="contact[email]" 
              class="newsletter-input"
              placeholder="{{ section.settings.email_placeholder }}"
              required
            >
            <button type="submit" class="newsletter-button">
              {{ section.settings.button_text }}
            </button>
          </div>
          
          {% if form.errors %}
            <div class="newsletter-error" style="display: block;">
              {{ form.errors.messages['email'] }}
            </div>
          {% endif %}
        {% endform %}
      </div>

      <!-- Contact Section -->
      <div class="footer-section">
        <h3 class="footer-section-title">{{ section.settings.contact_title }}</h3>
        <div class="contact-info">
          {% if section.settings.email %}
            <p>Email: <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a></p>
          {% endif %}
          {% if section.settings.phone != blank %}
            <p>Phone: <a href="tel:{{ section.settings.phone }}">{{ section.settings.phone }}</a></p>
          {% endif %}
          {% if section.settings.address %}
            <p style="margin-top: 15px;">{{ section.settings.address }}</p>
          {% endif %}
        </div>
      </div>

      <!-- Social Media Section -->
      <div class="footer-section">
        <h3 class="footer-section-title">{{ section.settings.social_title }}</h3>
        <div class="social-links">
          {% if section.settings.facebook_url != blank %}
            <a href="{{ section.settings.facebook_url }}" class="social-link" target="_blank" rel="noopener">
              <span class="social-icon">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </span>
              {{ section.settings.facebook_handle }}
            </a>
          {% endif %}

          {% if section.settings.instagram_url != blank %}
            <a href="{{ section.settings.instagram_url }}" class="social-link" target="_blank" rel="noopener">
              <span class="social-icon">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              </span>
              {{ section.settings.instagram_handle }}
            </a>
          {% endif %}

          {% if section.settings.tiktok_url != blank %}
            <a href="{{ section.settings.tiktok_url }}" class="social-link" target="_blank" rel="noopener">
              <span class="social-icon">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
                </svg>
              </span>
              {{ section.settings.tiktok_handle }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>

    <div class="footer-divider"></div>

    <div class="footer-bottom">
      <p>
        {{ section.settings.copyright_text }}
        {% if section.settings.designer_text != blank %}
          <br>
          {{ section.settings.designer_text }}
            <a href="{{ section.settings.designer_url }}" target="_blank" rel="noopener">
              {{ section.settings.designer_name }}
            </a>
        {% endif %}
      </p>
      {% if section.settings.show_policy_links %}
        <div class="policy-links">
          {% if shop.privacy_policy %}
            <a href="{{ shop.privacy_policy.url }}">{{ shop.privacy_policy.title }}</a>
          {% endif %}
          {% if shop.terms_of_service %}
            <a href="{{ shop.terms_of_service.url }}">{{ shop.terms_of_service.title }}</a>
          {% endif %}
          {% if shop.refund_policy %}
            <a href="{{ shop.refund_policy.url }}">{{ shop.refund_policy.title }}</a>
          {% endif %}
          {% if shop.shipping_policy %}
            <a href="{{ shop.shipping_policy.url }}">{{ shop.shipping_policy.title }}</a>
          {% endif %}
          {% if shop.subscription_policy %}
            <a href="{{ shop.subscription_policy.url }}">{{ shop.subscription_policy.title }}</a>
          {% endif %}
          {% if shop.contact_information %}
            <a href="{{ shop.contact_information.url }}">Contact Information</a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</footer>

