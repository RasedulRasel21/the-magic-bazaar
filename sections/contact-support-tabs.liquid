{% comment %}
  Contact/Support Section with Tabs
  Save this as: sections/contact-support.liquid
{% endcomment %}

<style>
  .contact-wrapper {
    background-color: #0a0a0a;
    padding: 60px 20px;
  }

  .contact-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .contact-tabs {
    display: flex;
    gap: 20px;
    margin-bottom: 50px;
    flex-wrap: wrap;
  }

  .contact-tab {
    flex: 1;
    min-width: 200px;
    padding: 18px 10px;
    font-size: 16px;
    font-family: 'Georgia', serif;
    border: 1px solid #c8a878;
    cursor: pointer;
    transition: all 0.3s ease;
    text-align: center;
    background-color: transparent;
    color: #c8a878;
  }

  .contact-tab:hover {
    background-color: rgba(200, 168, 120, 0.1);
  }

  .contact-tab.active {
    background-color: #c8a878;
    color: #fff;
    border-color: #c8a878;
  }

  .contact-content {
    display: none;
  }

  .contact-content.active {
    display: block;
    animation: fadeIn 0.5s ease;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .contact-questions {
    margin-bottom: 30px;
  }

  .contact-questions-title {
    font-size: 20px;
    color: #ffffff;
    font-family: 'Georgia', serif;
    margin-bottom: 25px;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 15px;
    color: #e8e8e8 !important;
    font-size: 16px;
    padding-bottom: 15px;
    border-bottom: 1px solid #333333;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .contact-item:hover {
    color: #c8a878 !important;
  }

  .contact-icon {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }

  .contact-icon svg {
    width: 100%;
    height: 100%;
    fill: currentColor;
  }

  .contact-policy-content {
    color: #e8e8e8;
    font-size: 15px;
    line-height: 1.8;
  }

  .contact-policy-content h3 {
    color: #c8a878;
    font-size: 18px;
    margin-bottom: 15px;
    margin-top: 30px;
  }

  .contact-policy-content h3:first-child {
    margin-top: 0;
  }

  .contact-policy-content p {
    margin-bottom: 15px;
  }

  .contact-policy-content ul,
  .contact-policy-content ol {
    margin: 15px 0;
    padding-left: 25px;
  }

  .contact-policy-content li {
    margin-bottom: 10px;
  }

  @media (max-width: 768px) {
    .contact-tabs {
      flex-direction: column;
    }

    .contact-tab {
      width: 100%;
    }
  }
</style>

<div class="contact-wrapper">
  <div class="contact-container">
    <div class="contact-tabs">
      <div class="contact-tab active" data-tab="chat">
        {{ section.settings.tab1_text }}
      </div>
      <div class="contact-tab" data-tab="return">
        {{ section.settings.tab2_text }}
      </div>
      <div class="contact-tab" data-tab="shipping">
        {{ section.settings.tab3_text }}
      </div>
    </div>

    <!-- Chat Tab Content -->
    <div class="contact-content active" id="chat">
      <div class="contact-questions">
        <h3 class="contact-questions-title">{{ section.settings.questions_title }}</h3>

        <div class="contact-info">
          {% if section.settings.phone != blank %}
            <a href="tel:{{ section.settings.phone }}" class="contact-item">
              <span class="contact-icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
                </svg>
              </span>
              <span>{{ section.settings.phone }}</span>
            </a>
          {% endif %}

          {% if section.settings.email != blank %}
            <a href="mailto:{{ section.settings.email }}" class="contact-item">
              <span class="contact-icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                </svg>
              </span>
              <span>{{ section.settings.email }}</span>
            </a>
          {% endif %}

          {% if section.settings.whatsapp != blank %}
            <a href="https://wa.me/{{ section.settings.whatsapp }}" class="contact-item" target="_blank">
              <span class="contact-icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                </svg>
              </span>
              <span>{{ section.settings.whatsapp_label }}</span>
            </a>
          {% endif %}
        </div>
      </div>
    </div>

    <!-- Return Policy Tab Content -->
    <div class="contact-content" id="return">
      <div class="contact-policy-content">
        {{ section.settings.return_policy_content }}
      </div>
    </div>

    <!-- Shipping Policy Tab Content -->
    <div class="contact-content" id="shipping">
      <div class="contact-policy-content">
        {{ section.settings.shipping_policy_content }}
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const tabs = document.querySelectorAll('.contact-tab');
    const contents = document.querySelectorAll('.contact-content');

    tabs.forEach(tab => {
      tab.addEventListener('click', function() {
        const targetTab = this.getAttribute('data-tab');

        tabs.forEach(t => t.classList.remove('active'));
        contents.forEach(c => c.classList.remove('active'));

        this.classList.add('active');
        document.getElementById(targetTab).classList.add('active');
      });
    });
  });
</script>

