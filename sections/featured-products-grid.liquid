{% comment %}
  Featured Products Grid Section
  Displays featured products from a selected collection in a clean grid layout
  with dark background and gold accents
{% endcomment %}

<style>
  .featured-products-section {
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.padding_top }}px 20px {{ section.settings.padding_bottom }}px;
  }

  .featured-products-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .featured-products-title {
    font-family: {{ section.settings.title_font }}, serif;
    font-size: {{ section.settings.title_size }}px;
    font-weight: 400;
    letter-spacing: 2px;
    color: {{ section.settings.title_color }};
    text-align: center;
    margin: 0 ;
  }

  .featured-products-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    gap: {{ section.settings.grid_gap }}px;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .featured-product-item {
    text-align: center;
    text-decoration: none;
    display: block;
    transition: transform 0.3s ease;
  }

  .featured-product-item:hover {
    transform: translateY(-5px);
  }

  .featured-product-image-wrapper {
    position: relative;
    aspect-ratio: 1;
    display: flex;
    align-items: center;
    justify-content: center; 
    padding: 0 20px;
  }

  .featured-product-image-wrapper img {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
    object-fit: contain;
    transition: transform 0.3s ease;
  }

  .featured-product-item:hover .featured-product-image-wrapper img {
    transform: scale(1.05);
  }

  .featured-product-info {
    padding: 0 10px;
  }

  .featured-product-name {
    font-family: {{ section.settings.product_title_font }}, serif;
    font-size: {{ section.settings.product_title_size }}px;
    font-weight: 400;
    color: {{ section.settings.product_title_color }};
    margin: 0 0 8px 0;
    line-height: 1.3;
  }

  .featured-product-vendor {
    font-size: {{ section.settings.vendor_size }}px;
    font-weight: 400;
    letter-spacing: 2px;
    text-transform: uppercase;
    color: {{ section.settings.vendor_color }};
    margin: 0 0 10px 0;
    opacity: 0.8;
  }

  .featured-product-price {
    font-size: {{ section.settings.price_size }}px;
    font-weight: 400;
    color: {{ section.settings.price_color }};
    margin: 0;
  }

  .featured-product-price .compare-price {
    text-decoration: line-through;
    opacity: 0.6;
    margin-right: 8px;
  }

  /* Responsive styles */
  @media (max-width: 990px) {
    .featured-products-grid {
      grid-template-columns: repeat({{ section.settings.columns_tablet }}, 1fr);
      gap: 30px;
    }

    .featured-products-title {
      font-size: calc({{ section.settings.title_size }}px * 0.8);
      margin-bottom: 40px;
    }
  }

  @media (max-width: 749px) {
    .featured-products-grid {
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
      gap: 25px;
    }

    .featured-products-title {
      font-size: calc({{ section.settings.title_size }}px * 0.65);
      margin-bottom: 30px;
    }

    .featured-product-name {
      font-size: calc({{ section.settings.product_title_size }}px * 0.85);
    }

    .featured-product-image-wrapper {
      padding: 10px;
    }
  }

  /* View all button */
  .featured-products-footer {
    text-align: center;
    margin-top: 50px;
  }

  .featured-products-view-all {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 15px 40px;
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    text-transform: uppercase;
    font-weight: 500;
    letter-spacing: 2px;
    font-size: 13px;
    transition: all 0.3s ease;
  }

  .featured-products-view-all::before {
    content: "";
    position: absolute;
    top: -5px;
    left: -5px;
    right: -5px;
    bottom: -5px;
    border: 1px solid {{ section.settings.button_border_color }};
    pointer-events: none;
    transition: all 0.3s ease;
  }

  .featured-products-view-all:hover {
    background-color: {{ section.settings.button_hover_bg }};
    color: {{ section.settings.button_hover_text }};
  }

  .featured-products-view-all:hover::before {
    top: -8px;
    left: -8px;
    right: -8px;
    bottom: -8px;
  }
</style>

<section class="featured-products-section">
  <div class="featured-products-container">
    {%- if section.settings.title != blank -%}
      <h2 class="featured-products-title">{{ section.settings.title }}</h2>
    {%- endif -%}

    {%- if section.settings.collection != blank -%}
      {%- assign collection = collections[section.settings.collection] -%}
      {%- assign products_count = section.settings.products_to_show | default: 4 -%}

      <ul class="featured-products-grid">
        {%- for product in collection.products limit: products_count -%}
          <li>
            <a href="{{ product.url }}" class="featured-product-item">
              <div class="featured-product-image-wrapper">
                {%- if product.featured_image != blank -%}
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    srcset="
                      {{ product.featured_image | image_url: width: 300 }} 300w,
                      {{ product.featured_image | image_url: width: 450 }} 450w,
                      {{ product.featured_image | image_url: width: 600 }} 600w
                    "
                    sizes="(min-width: 990px) 25vw, (min-width: 750px) 33vw, 50vw"
                    alt="{{ product.featured_image.alt | default: product.title | escape }}"
                    loading="lazy"
                    width="{{ product.featured_image.width }}"
                    height="{{ product.featured_image.height }}"
                  >
                {%- else -%}
                  {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}
              </div>

              <div class="featured-product-info">
                <h3 class="featured-product-name">{{ product.title }}</h3>

                {%- if section.settings.show_vendor and product.vendor != blank -%}
                  <p class="featured-product-vendor">{{ product.vendor }}</p>
                {%- endif -%}

                <p class="featured-product-price">
                  {%- if product.compare_at_price > product.price -%}
                    <span class="compare-price">{{ product.compare_at_price | money }}</span>
                  {%- endif -%}
                  <span>{{ product.price | money }}</span>
                </p>
              </div>
            </a>
          </li>
        {%- endfor -%}
      </ul>

      {%- if section.settings.show_view_all -%}
        <div class="featured-products-footer">
          <a href="{{ collection.url }}" class="featured-products-view-all">
            {{ section.settings.view_all_text | default: 'View All' }}
          </a>
        </div>
      {%- endif -%}

    {%- else -%}
      {%- comment -%} Placeholder products when no collection is selected {%- endcomment -%}
      <ul class="featured-products-grid">
        {%- for i in (1..4) -%}
          <li>
            <div class="featured-product-item">
              <div class="featured-product-image-wrapper">
                {{ 'product-' | append: i | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
              <div class="featured-product-info">
                <h3 class="featured-product-name">Product Title</h3>
                {%- if section.settings.show_vendor -%}
                  <p class="featured-product-vendor">Vendor Name</p>
                {%- endif -%}
                <p class="featured-product-price">$29.99</p>
              </div>
            </div>
          </li>
        {%- endfor -%}
      </ul>
    {%- endif -%}
  </div>
</section>

